<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.passmanager">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.USE_BIOMETRIC"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PassManager">

        <activity android:name=".EditSiteActivity"
                  android:theme="@style/Theme.PassManager.NoActionBar">
        </activity>

        <activity android:name=".SiteDetailsActivity"
            android:theme="@style/Theme.PassManager.NoActionBar"/>

        <activity android:name=".AddSiteActivity"
            android:theme="@style/Theme.PassManager.NoActionBar"/>

        <activity
            android:name=".HomeActivity"
            android:theme="@style/Theme.PassManager.NoActionBar" />
        <activity
            android:name=".SignUpActivity"
            android:theme="@style/Theme.PassManager.NoActionBar" />

        <activity
            android:name=".MainActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SignInActivity"
            android:theme="@style/Theme.PassManager.NoActionBar" />

    </application>

</manifest>